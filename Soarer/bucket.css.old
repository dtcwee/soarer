html, body, #cesiumContainer {
	width: 100%; height: 100%; margin: 0; padding: 0; overflow: hidden;
}
body {
    background: #000;
    color: #eee;
    font-family: sans-serif;
    font-size: 9pt;
}
.fullSize {
    position: absolute;
    top: 0;
    left: 0;
    border: none;
    width: 100%;
    height: 100%;
}
#toolbar, #controls {
    margin: 5px;
    padding: 2px 5px;
    position: absolute;
}
#toolbar {
	background: rgba(42, 42, 42, 0.5);
	border-radius: 6px;
	top: 5px;
	left: 5px;
}
#controls {
	background: rgba(42, 42, 42, 0.8);
	border-radius: 6px;
	bottom: 33%;
	right: -5%;
	transform: rotate(-90deg);
}
input[id="moveForward"] {
	width: 90%;
}
